<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
	<description>Apply WordPress Coding Standards to this plugin.</description>

	<!-- Scan these files -->
	<file>.</file>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	
	<!-- Use WordPress Extra ruleset -->
	<rule ref="WordPress-Extra" />
	<rule ref="WordPress-Docs" />
    
    <!-- Enforce PSR-4 based on namespace -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="LLMSTxt"/>
                <element value="llms_txt_"/>
            </property>
        </properties>
    </rule>

	<!-- Allow shorter array syntax -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
	
	<!-- Configs -->
	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="parallel" value="75"/>
	<arg value="ps"/>
</ruleset>
